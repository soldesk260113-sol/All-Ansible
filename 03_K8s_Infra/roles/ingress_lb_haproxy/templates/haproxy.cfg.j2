global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option                  http-server-close
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

frontend stats
    bind *:8404
    stats enable
    stats uri /stats
    stats refresh 10s
    stats admin if LOCALHOST

frontend http_front
    bind *:{{ haproxy_frontend_port_http }}
    {% if haproxy_frontend_custom_config is defined %}
    {{ haproxy_frontend_custom_config }}
    {% endif %}
    default_backend http_back

frontend https_front
    mode tcp
    bind *:{{ haproxy_frontend_port_https }}
    default_backend https_back

backend http_back
    balance roundrobin
    {% for server in haproxy_backend_servers %}
    server {{ server.name }} {{ server.address }} check
    {% endfor %}

backend https_back
    mode tcp
    balance roundrobin
    {% for server in haproxy_backend_servers %}
    server {{ server.name }} {{ server.address }} check
    {% endfor %}
